@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="container py-5">
    <div class="text-center">
        <i class="fas fa-check-circle text-success" style="font-size: 100px;"></i>
        <h1 class="mt-4 text-success">Đặt hàng thành công!</h1>
        <p class="lead">Cảm ơn <strong>@ViewBag.CustomerName</strong> đã mua hàng!</p>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-file-invoice"></i> Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong><i class="fas fa-hashtag"></i> Mã đơn hàng:</strong>
                        </div>
                        <div class="col-6 text-end">
                            <span class="badge bg-info text-white fs-6">#@ViewBag.OrderId</span>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong><i class="fas fa-user"></i> Khách hàng:</strong>
                        </div>
                        <div class="col-6 text-end">
                            @ViewBag.CustomerName
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong><i class="fas fa-calendar-alt"></i> Ngày đặt:</strong>
                        </div>
                        <div class="col-6 text-end">
                            @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong><i class="fas fa-money-bill-wave"></i> Tổng tiền:</strong>
                        </div>
                        <div class="col-6 text-end">
                            <span class="text-danger fs-5"><strong>@ViewBag.TotalAmount VNĐ</strong></span>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            <strong><i class="fas fa-info-circle"></i> Trạng thái:</strong>
                        </div>
                        <div class="col-6 text-end">
                            <span class="badge bg-warning text-dark fs-6">
                                <i class="fas fa-clock"></i> Chờ xử lý
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <h5><i class="fas fa-shipping-fast"></i> Thông tin giao hàng</h5>
                <p class="mb-0">Đơn hàng của bạn đang được xử lý và sẽ được giao trong vòng <strong>2-3 ngày</strong>.</p>
            </div>

            <div class="text-center mt-4">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-home"></i> Về trang chủ
                </a>
            </div>
        </div>
    </div>
</div>
