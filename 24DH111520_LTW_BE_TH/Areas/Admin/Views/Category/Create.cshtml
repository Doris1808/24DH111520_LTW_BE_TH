@model _24DH111520_LTW_BE_TH.Models.Category

@{
    ViewBag.Title = "Thêm danh mục";
}

<div class="container mt-4">
    <h2>Thêm danh mục</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form action="/Admin/Category/Create" method="post">
        <div class="form-group mb-3">
            <label for="CategoryName">Tên danh mục</label>
            <input type="text" name="CategoryName" id="CategoryName" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success mt-2">Lưu</button>
        <a href="/Admin/Category" class="btn btn-secondary mt-2">Quay lại</a>
    </form>
</div>
