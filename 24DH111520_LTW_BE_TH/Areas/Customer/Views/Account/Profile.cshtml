@model _24DH111520_LTW_BE_TH.Models.Customer

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin cá nhân</h4>
                </div>
                <div class="card-body">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        <div class="mb-3">
                            <label class="form-label">Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Họ và tên *</label>
                            <input asp-for="CustomerName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số điện thoại *</label>
                            <input asp-for="CustomerPhone" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="CustomerEmail" type="email" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <textarea asp-for="CustomerAddress" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            <div>
                                <a asp-action="ChangePassword" class="btn btn-warning me-2">Đổi mật khẩu</a>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
