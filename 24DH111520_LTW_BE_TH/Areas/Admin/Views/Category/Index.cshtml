@model IEnumerable<_24DH111520_LTW_BE_TH.Models.Category>

@{
    ViewBag.Title = "Danh sách danh mục";
}

<div class="container mt-4">
    <h2>Quản lý Danh mục sản phẩm</h2>

    <p>
        <a href="/Admin/Category/Create" class="btn btn-primary">Thêm danh mục mới</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã danh mục</th>
                <th>Tên danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a href="/Admin/Category/Edit/@item.CategoryId" class="btn btn-sm btn-warning">Sửa</a>
                        <a href="/Admin/Category/Details/@item.CategoryId" class="btn btn-sm btn-info">Chi tiết</a>

                        <!-- XÓA TRỰC TIẾP BẰNG FORM -->
                        <form action="/Admin/Category/DeleteDirect/@item.CategoryId" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
