@model List<_24DH111520_LTW_BE_TH.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- BANNER QUẢNG CÁO -->
<div class="mb-4">
    <img src="https://cdn1.fahasa.com/media/magentothem/banner7/Resize_SbooksT11_KC_840x320.png"
         alt="Banner quảng cáo"
         class="img-fluid w-100 rounded shadow"
         style="max-height: 400px; object-fit: cover;" />
</div>

<!-- SẢN PHẨM MỚI NHẤT -->
<h2 class="mb-4"><i class="fas fa-fire text-danger"></i> Sản phẩm mới nhất</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.ProductImage))
                {
                    <img src="@product.ProductImage" class="card-img-top" alt="@product.ProductName" style="height: 250px; object-fit: cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/300x400?text=No+Image" class="card-img-top" alt="No Image" style="height: 250px; object-fit: cover;">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.ProductName</h5>
                    <p class="text-danger fw-bold fs-5">@product.ProductPrice.ToString("N0") VNĐ</p>
                    <p class="text-muted small">@product.Category?.CategoryName</p>
                    <div class="mt-auto">
                        <a asp-action="ProductDetail" asp-route-id="@product.ProductId" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-eye"></i> Xem chi tiết
                        </a>
                        <a asp-area="Customer" asp-controller="Cart" asp-action="Add" asp-route-id="@product.ProductId" class="btn btn-success btn-sm">
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
