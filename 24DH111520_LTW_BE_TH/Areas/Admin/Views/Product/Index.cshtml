@model IEnumerable<_24DH111520_LTW_BE_TH.Models.Product>

@{
    ViewBag.Title = "Quản lý Sản phẩm";
}

<div class="container mt-4">
    <h2>Quản lý Sản phẩm</h2>

    <!-- SEARCH -->
    <form method="get" class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm kiếm sản phẩm..." />
            </div>
            <div class="col-md-3">
                <select name="sort" class="form-control">
                    <option value="">Sắp xếp theo tên (A-Z)</option>
                    <option value="name_desc" selected="@(ViewBag.Sort == "name_desc")">Tên (Z-A)</option>
                    <option value="price" selected="@(ViewBag.Sort == "price")">Giá (Thấp đến Cao)</option>
                    <option value="price_desc" selected="@(ViewBag.Sort == "price_desc")">Giá (Cao đến Thấp)</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
            <div class="col-md-3">
                <a href="/Admin/Product/Create" class="btn btn-success">Thêm sản phẩm mới</a>
            </div>
        </div>
    </form>

    <!-- TABLE -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.ProductPrice.ToString("N0") VNĐ</td>
                    <td>
                        <a href="/Admin/Product/Edit/@item.ProductId" class="btn btn-sm btn-warning">Sửa</a>
                        <a href="/Admin/Product/DeleteDirect/@item.ProductId"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Xóa sản phẩm này?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- PAGING -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="?search=@ViewBag.Search&sort=@ViewBag.Sort&page=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
