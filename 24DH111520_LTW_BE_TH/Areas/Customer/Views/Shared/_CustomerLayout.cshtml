@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .cart-badge {
            position: relative;
        }

            .cart-badge .badge {
                position: absolute;
                top: -8px;
                right: -10px;
                font-size: 10px;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">
                <i class="fas fa-store"></i> MyStore
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </li>

                    <!-- DANH MỤC DROPDOWN -->
                    @if (ViewBag.Categories != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-list"></i> Danh mục
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Search">
                                        Tất cả sản phẩm
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Search" asp-route-categoryId="@category.CategoryId">
                                            @category.CategoryName
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>

                <!-- SEARCH BAR -->
                <form class="d-flex me-3" asp-area="Customer" asp-controller="Home" asp-action="Search" method="get">
                    <input class="form-control me-2" type="search" name="keyword" placeholder="Tìm kiếm..." style="width: 250px;">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>

                <ul class="navbar-nav">
                    <!-- GIỎ HÀNG -->
                    <li class="nav-item">
                        <a class="nav-link cart-badge" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                            @{
                                var cart = Context.Session.GetString("Cart");
                                var itemCount = 0;
                                if (!string.IsNullOrEmpty(cart))
                                {
                                    var cartItems = System.Text.Json.JsonSerializer.Deserialize<List<_24DH111520_LTW_BE_TH.Models.CartItem>>(cart);
                                    itemCount = cartItems?.Sum(x => x.Quantity) ?? 0;
                                }
                            }
                            @if (itemCount > 0)
                            {
                                <span class="badge bg-danger">@itemCount</span>
                            }
                        </a>
                    </li>

                    @if (Context.Session.GetString("Username") != null)
                    {
                        <!-- ĐÃ ĐĂNG NHẬP -->
                        <li class="nav-item">
                            <span class="nav-link">
                                <i class="fas fa-user"></i>
                                @Context.Session.GetString("Username")
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- CHƯA ĐĂNG NHẬP -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus"></i> Đăng ký
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        @RenderBody()
    </main>
    <!--  FOOTER  -->
    <footer class="bg-dark text-white mt-5 pt-4 pb-3">
        <div class="container">
            <div class="row">
                <!-- THÔNG TIN LIÊN HỆ -->
                <div class="col-md-4 mb-3">
                    <h5><i class="fas fa-store"></i> MyStore</h5>
                    <p class="text-muted">Website bán hàng trực tuyến uy tín, chất lượng.</p>
                    <p>
                        <i class="fas fa-map-marker-alt"></i> 123 Đường ABC, Quận 1, TP.HCM<br />
                        <i class="fas fa-phone"></i> 0123 456 789<br />
                        <i class="fas fa-envelope"></i> support@mystore.vn
                    </p>
                </div>

                <!-- LIÊN KẾT NHANH -->
                <div class="col-md-4 mb-3">
                    <h5>Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="Customer" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right"></i> Trang chủ</a></li>
                        <li><a asp-area="Customer" asp-controller="Home" asp-action="Search"><i class="fas fa-angle-right"></i> Sản phẩm</a></li>
                        <li><a asp-area="Customer" asp-controller="Cart" asp-action="Index"><i class="fas fa-angle-right"></i> Giỏ hàng</a></li>
                        <li><a asp-area="Customer" asp-controller="Account" asp-action="Login"><i class="fas fa-angle-right"></i> Đăng nhập</a></li>
                    </ul>
                </div>

                <!-- MẠNG XÃ HỘI -->
                <div class="col-md-4 mb-3">
                    <h5>Kết nối với chúng tôi</h5>
                    <p>Theo dõi chúng tôi trên mạng xã hội:</p>
                    <div>
                        <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
            </div>

            <hr class="bg-secondary" />

            <!-- COPYRIGHT -->
            <div class="text-center">
                <p class="mb-0">© 2025 MyStore - Bản quyền thuộc về 24DH111520. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
