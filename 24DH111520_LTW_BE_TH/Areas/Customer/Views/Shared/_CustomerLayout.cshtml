<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .cart-badge {
            position: relative;
        }

            .cart-badge .badge {
                position: absolute;
                top: -8px;
                right: -10px;
                padding: 3px 6px;
                border-radius: 50%;
                background: red;
                color: white;
                font-size: 10px;
            }

        /* FIX: CHỮ TRẮNG NỔI BẬT HƠN */
        .navbar-dark .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.95) !important;
            font-weight: 500;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #ffffff !important;
                text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
            }

        /* FIX: DROPDOWN TEXT */
        .navbar-dark .dropdown-toggle {
            color: rgba(255, 255, 255, 0.95) !important;
            font-weight: 500;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img src="https://qbfbooks.com/wp-content/uploads/2025/06/qbf-Logo-1.png"
                         alt="MyStore" height="40" class="me-2">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item cart-badge">
                            <a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Giỏ hàng
                                @{
                                    var cart = Context.Session.GetString("Cart");
                                    int totalItems = 0;
                                    if (!string.IsNullOrEmpty(cart))
                                    {
                                        try
                                        {
                                            var cartItems = System.Text.Json.JsonSerializer.Deserialize<List<Dictionary<string, System.Text.Json.JsonElement>>>(cart);
                                            if (cartItems != null)
                                            {
                                                totalItems = cartItems.Sum(item => item.ContainsKey("Quantity") ? item["Quantity"].GetInt32() : 0);
                                            }
                                        }
                                        catch
                                        {
                                            totalItems = 0;
                                        }
                                    }
                                }
                                @if (totalItems > 0)
                                {
                                    <span class="badge">@totalItems</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Order" asp-action="History">
                                <i class="fas fa-history"></i> Lịch sử đơn hàng
                            </a>
                        </li>
                    </ul>

                    <<!-- SEARCH FORM -->
                    <form class="d-flex me-3" asp-area="Customer" asp-controller="Home" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" name="keyword" placeholder="Tìm kiếm sản phẩm..." />
                        <button class="btn btn-warning" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>


                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-area="Customer" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user"></i> Thông tin cá nhân
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Customer" asp-controller="Account" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Customer" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Customer" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="https://qbfbooks.com/wp-content/uploads/2025/06/qbf-Logo-1.png"
                         alt="MyStore"
                         height="50"
                         class="mb-3">
                    <p>Website bán hàng uy tín</p>
                </div>
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <p>
                        <i class="fas fa-phone"></i> 0123 456 789<br>
                        <i class="fas fa-envelope"></i> support@mystore.vn
                    </p>
                </div>
                <div class="col-md-4">
                    <h5>Theo dõi</h5>
                    <a href="#" class="text-white me-2"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-instagram fa-lg"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-youtube fa-lg"></i></a>
                </div>
            </div>
            <hr class="bg-light" />
            <p class="text-center mb-0">© 2025 MyStore - 24DH111520. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
